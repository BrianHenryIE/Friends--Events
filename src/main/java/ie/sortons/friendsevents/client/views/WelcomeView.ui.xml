<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:fbb="urn:import:ie.sortons.gwtfbplus.client.widgets.buttons"
	xmlns:fbw="urn:import:ie.sortons.gwtfbplus.client.widgets">
	<ui:style>


.preLoginScreen {
    overflow: hidden; /* clear the float */
margin: 50px auto 10px;
    
    width: 800px;
}


.left {
    width: 170px;
    float: left;
   	text-align: center;

}
.text {
	display: inline-block;
	font-size: 11px;
	padding: 10px 5px;
	width: 550px;
	float:right;
	border-bottom: 1px solid #e9e9e9;
    overflow: hidden;
}
	</ui:style>

	<g:FlowPanel addStyleNames="{style.preLoginScreen}">
		
	<g:HTMLPanel addStyleNames="{style.left}">
	    <fbb:GreenButton text="Add Application" ui:field="addAppButton" />
	    <fbw:LoginButton ui:field="fbLoginButton" /> 
	</g:HTMLPanel>
	
	<g:HTMLPanel addStyleNames="{style.text}">	
		Looking for something to do? Friends' Events uses the events your friends have been invited to to display a map of upcoming events you might be interested in. Let's go out!
	</g:HTMLPanel>
	
	</g:FlowPanel>
	
</ui:UiBinder> 