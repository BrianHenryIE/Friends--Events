<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

.heading {
	width: 100%;
	padding-bottom: 10px;	
	border-bottom: 1px solid #AAAAAA;
	margin-top: 10px;
	margin-bottom: 10px;
	text-align: left;

overflow: hidden;
}

.title {
	font-family: 'lucida grande',tahoma,verdana,arial,sans-serif;
	color: #1C2A47;
    font-size: 16px;
	outline: medium none;
	font-weight: bold;
	
	float:left;
	width: 50%;
	
}

.shareLink {
	float: right;
	overflow: hidden;
	color: #3b5998;
	font-family: 'lucida grande',tahoma,verdana,arial,sans-serif;
	font-size: 11px;

	padding-top: 3px;
	margin-right:15px;
}
	</ui:style>

	<g:FlowPanel addStyleNames="{style.heading}">
	    	
		<g:Label addStyleNames="{style.title}">Friends' Events</g:Label>
	
		<g:Anchor addStyleNames="{style.shareLink}"  ui:field="shareLink">Share</g:Anchor>
	    
	</g:FlowPanel>
	
</ui:UiBinder> 